<script>

$(".checkbox_group").on("click", "#check_all", function () {
	  var checked = $(this).is(":checked");

	  if(checked){
	  	$(this).parents(".checkbox_group").find('input').prop("checked", true);
	  } else {
	  	$(this).parents(".checkbox_group").find('input').prop("checked", false);
	  }
	});

</script>
