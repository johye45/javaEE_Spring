<script>

function king(selectAll)  {
	  const checkboxes  = document.querySelectorAll('input[type="checkbox"]');
	  checkboxes.forEach((checkbox) => {
	    checkbox.checked = selectAll.checked
	  })
	}

</script>
<body>
	<input type='checkbox' onclick='king(this)'/> 
<br />
<input type='checkbox'  /> 
